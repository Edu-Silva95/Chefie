<div class="sing-up-page-wrapper">
  <h2 class="sign-up-page__title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "sign-up-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="sign-up-form__group">
      <%= f.label :username, class: "sign-up-form__label" %>
      <%= f.text_field :username, autofocus: true, class: "sign-up-form__input" %>
    </div>

    <div class="sign-up-form__group">
      <%= f.label :email, class: "sign-up-form__label" %>
      <%= f.email_field :email, autocomplete: "email", class: "sign-up-form__input" %>
    </div>

    <div class="sign-up-form__group">
      <%= f.label :password, class: "sign-up-form__label" %>
      <% if @minimum_password_length %>
        <em class="sign-up-form__password-info">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "sign-up-form__input" %>
    </div>

    <div class="sign-up-form__group">
      <%= f.label :password_confirmation, class: "sign-up-form__label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "sign-up-form__input" %>
    </div>

    <div class="sign-up-form__group">
      <%= f.label :avatar, class: "sign-up-form__label" %>
      <%= f.file_field :avatar, class: "sign-up-form__input" %>
    </div>

    <div class="sign-up-form__actions">
      <%= f.submit "Sign up", class: "sign-up-form__submit-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
