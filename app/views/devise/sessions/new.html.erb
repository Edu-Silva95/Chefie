<div class="login-page-wrapper">
  <h2 class="login-page__title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="login-form__group">
      <%= f.label :email, class: "login-form__label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-form__input" %>
    </div>

    <div class="login-form__group">
      <%= f.label :password, class: "login-form__label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "login-form__input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="login-form__group">
        <label class="login-form__label">
          <%= f.check_box :remember_me %> Remember me
        </label>
      </div>
    <% end %>

    <div class="login-form__actions">
      <%= f.submit "Log in", class: "login-form__submit-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
